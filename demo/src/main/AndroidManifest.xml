<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.trading212.demo"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/title_activity_main"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name=".DiverseRecyclerAdapterDemoActivity"
            android:label="@string/title_activity_diverse_recycler_adapter_demo"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".GenericRecyclerViewDemoActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
        <activity
            android:name=".JavaStickyExampleActivity"
            android:theme="@style/AppTheme.NoActionBar"/>
    </application>

</manifest>